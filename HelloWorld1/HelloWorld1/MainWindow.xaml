        xmlns:local="clr-namespace:HelloWorld1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="이름을 입력하세요." HorizontalAlignment="Left" Margin="88,113,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="37" Margin="292,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="121" FontSize="20"/>
        <Button x:Name="btnSayHello" Content="Say Hello!" HorizontalAlignment="Left" Margin="429,113,0,0" VerticalAlignment="Top" Width="121" Height="37" FontSize="20" Click="btnSayHello_Click"/>

    </Grid>
